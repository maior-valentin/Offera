<%= form_for(@event, remote: true) do |f| %>
  <label for="">Name:</label>    
  <%= f.text_field :name %>
  <label for="">Description:</label>    
  <%= f.text_field :description %>
  <label for="">Date:</label>    
  <%= f.date_select :date %>
  <label for="">Image:</label>    
  <%= f.file_field :image %>
  <label for="">Total:</label>    
  <%= f.text_field :total %>
  <%= f.submit "Update" %>
<% end %>